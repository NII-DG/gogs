{{template "base/head" .}}

<div class="repository">
	{{template "repo/header" .}}
	<div class="ui container">
		<div class="ui grid">
			<div class="twelve wide column content">
				{{template "base/alert" .}}
				<h4 class="ui top attached header">
					実行環境を構築
				</h4>
				<div class="ui attached segment">
					<form class="ui form" action="{{.Link}}" method="post">
						{{.CSRFTokenHTML}}
						<div class="field">
							非公開リポジトリの場合、実行環境構築のためにパスワードの入力が必要です。
						</div>
						<label>
							{{.i18n.Tr "username"}}: {{.LoggedUser.Name}}
						</label>
						<div class="field {{if .Err_Password}}error{{end}}">
							{{if .is_ex}}
							<form action="/{{.Repository.Owner.Name}}/{{.Repository.Name}}/launch/experiment" method="post" id = "Auth1">
								<div class="required field">
									<label for="password">{{.i18n.Tr "password"}}</label>
									<input type="password" name="password" maxlength="255" required>
								</div>
								<button class="ui green button" id="submit-button" type="submit">実行環境を構築する</button>
							</form>
							{{else}}
							<form action="/{{.Repository.Owner.Name}}/{{.Repository.Name}}/launch/research" method="post" id = "Auth1">
								<div class="required field">
									<label for="password">{{.i18n.Tr "password"}}</label>
									<input type="password" name="password" maxlength="255" required>
								</div>
									<button class="ui green button" id="submit-button" type="submit">実行環境を構築する</button>
							</form>
							{{end}}
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
